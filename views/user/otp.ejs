<style>
  .otp-container {
    height: 90vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url('../../image/otpBG1.webp');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  .otp-box {
    width: 500px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    border: 1px solid #dcdcdc;
    border-radius: 10px;
    padding: 2rem 1rem;
    background-color: rgba(255, 255, 255, 0.4);
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);

  }

  .otp-box form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .otp-box input {
    width: 150px;
    font-size: 30px;
    text-align: center;
    border-radius: 5px;
    border: 2px solid #dcdcdc;
    font-weight: 700;
    outline: none;
    transition: all .1s;
  }

  #resend-otp {
    cursor: pointer;
    text-decoration: none;
    font-size: 1rem;
    display: none;
  }

  #otp-timer {
    border: none;
    outline: none;
    font-size: 1rem;
    font-weight: 600;
    width: 50px;
  }
</style>

<%- include('navbar') %>

<div class="otp-container">
  <div class="otp-box">
    <h2>Enter OTP</h2>
    <small>One Time Password (OTP) has been successfully sent to</small>

    <!-- email address from backend -->
    <b id="OTP-email">
      <%= emailAddress %>

    </b>
    <small>Please enter the OTP</small>
    <form action="/otp/" method="post">
      <input type="text" name="otp" minlength="6" maxlength="6" required>

      <small id="otp-timer-box">OTP will expire in<input type="text" id="otp-timer"></input></small>


      <input type="text" value="<%= otpExpireTime %>" id="otp-sended-time" hidden>

      <button class="btn btn-dark rounded-pill" type="submit" id="otp-btn">Verify OTP</button>
    </form>
  </div>
</div>

<%- include('footer') %>

<script>
  const otpTimer = document.getElementById('otp-timer');
  const otpSendedTime = document.getElementById('otp-sended-time');
  const otpEmail = document.getElementById('OTP-email');

  const OTP_MAX_TIME_MS = 30000; // 2 minutes in milliseconds
  let timerInterval;

  function updateTimer() {
    const currentDate = Date.now();
    const otpSentTime = parseInt(otpSendedTime.value, 10);
    const timeElapsed = currentDate - otpSentTime;
    const timeRemaining = Math.max(OTP_MAX_TIME_MS - timeElapsed, 0);

    const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);
    otpTimer.value = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

    if (timeRemaining <= 0) {
      clearInterval(timerInterval);
      showResendOtpAlert();
    }
  }

  function showResendOtpAlert() {
    Swal.fire({
      title: "OTP expired",
      text: "Do you want to resend the OTP?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Sure!"
    }).then((result) => {
      if (result.isConfirmed) {
        resendOtp();
      } else if (result.isDismissed) {
        window.location = "/signup";
      }
    });
  }

  function resendOtp() {
    const URL = `/resend-otp/${otpEmail.innerHTML}`;
    fetch(URL, { method: "GET" })
      .then(response => {
        if (response.ok) {
          Swal.fire({
            icon: "success",
            title: "OTP Sent Successfully"
          }).then(() => {
            // Reset OTP sent time and restart the timer
            otpSendedTime.value = Date.now();
            clearInterval(timerInterval);
            timerInterval = setInterval(updateTimer, 1000);
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Something went wrong!",
          }).then(() => {
            window.location = "/signup";
          });
        }
      });
  }

  // Start the timer initially
  timerInterval = setInterval(updateTimer, 1000);
</script>  