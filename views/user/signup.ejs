<script>
  

  // script for toggling password visibility
  document.getElementById('togglePassword1').addEventListener('click', function (e) {
    const type = document.getElementById('password').getAttribute('type') === 'password' ? 'text' : 'password';
    
    document.getElementById('password').setAttribute('type', type);
    document.querySelectorAll('i')[0].classList.toggle('fa-eye');
    document.querySelectorAll('i')[0].classList.toggle('fa-eye-slash');
  });

  document.getElementById('togglePassword2').addEventListener('click', function (e) {
    const type = document.getElementById('confirmPassword').getAttribute('type') === 'password' ? 'text' : 'password';
    
    document.getElementById('confirmPassword').setAttribute('type', type);
    document.querySelectorAll('i')[1].classList.toggle('fa-eye');
    document.querySelectorAll('i')[1].classList.toggle('fa-eye-slash');
  });
</script>