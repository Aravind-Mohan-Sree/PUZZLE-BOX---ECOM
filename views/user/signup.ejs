<!-- signup form container -->
<section class="main">
  <div class="content">
    <div class="content-child"></div>
    <!-- signup form -->
    <div class="login-form-container">
      <form class="rectangle-parent" method="post" action="/signup">
        <div class="frame-child"></div>
        <div class="login-button-container-wrapper">
          <div class="login-button-container">
            <h1 class="login1">Create New Account!</h1>
            <div class="welcome-message">
              <div class="welcome-back">Enter your details to continue...</div>
            </div>
          </div>
        </div>
        <div class="input-fields">
          <div class="rectangle-group">
            <div class="frame-item"></div>
            <input class="email-address" placeholder="Full Name" type="text" name="name"/>
          </div>
        </div>
        <div class="input-fields">
          <div class="rectangle-group">
            <div class="frame-item"></div>
            <input class="email-address" placeholder="Email Address" type="email" name="username"/>
          </div>
        </div>
        <div class="input-fields">
          <div class="rectangle-group">
            <div class="frame-item"></div>
            <input class="email-address" placeholder="Phone Number" type="text" name="phone"/>
          </div>
        </div>
        <div class="input-fields1">
          <div class="rectangle-container">
            <div class="frame-item"></div>
            <div class="input-group h-100">
              <input type="password" name="password" class="form-control ms-2 bg-black border-0 shadow-none text-light" placeholder="Password" aria-label="Recipient's username" aria-describedby="basic-addon2" id="password">
              <span class="input-group-text bg-black border-0" id="togglePassword1">
                <i class="fad fa-eye-slash p-1" style="--fa-primary-color: #ffffff; --fa-secondary-color: #ffffff;"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="input-fields1">
          <div class="rectangle-container">
            <div class="frame-item"></div>
            <div class="input-group h-100">
              <input type="password" name="confirmPassword" class="form-control ms-2 bg-black border-0 shadow-none text-light" placeholder="Confirm Password" aria-label="Recipient's username" aria-describedby="basic-addon2" id="confirmPassword">
              <span class="input-group-text bg-black border-0" id="togglePassword2">
                <i class="fad fa-eye-slash p-1" style="--fa-primary-color: #ffffff; --fa-secondary-color: #ffffff;"></i>
              </span>
            </div>
          </div>
        </div>        
        <div class="frame-wrapper">
          <div class="group-div">
            <div class="rectangle-div"></div>
            <input class="login2" type="submit" value="Signup"/>
          </div>
        </div>
        <div class="social-login-container-wrapper">
          <div class="social-login-container">
            <div class="new-customer-signup">
              <div class="new-customer-signup-container" id="newCustomerSignup">
                Already have an account?
                <a class="signup" href="/login">Login</a>
              </div>
            </div>            
          </div>
        </div>
        <div class="terms">
          <div class="by-clicking-continue">
            By clicking continue, you agree to our Terms of Service and
            Privacy Policy.
          </div>
        </div>
      </form>
    </div>
