<!-- ------------------------------- styles -------------------------------- -->
<style>
  .product-detail-container {
    flex-grow: 1;
    padding-top: 6.25rem;
    padding-bottom: 2.875rem;
  }

  .main-image {
    cursor: crosshair;
    transition: transform 0.1s linear;
  }

  .main-image:hover {
    transform: scale(3);
  }

  .sub-image {
    cursor: pointer;
  }

  /* Style the tab */
  .tab {
    overflow: hidden;
    background-color: #ffffff;
  }

  /* Style the tab content */
  .tabcontent {
    display: none;
    padding: 2rem;
    margin-top: 1.25rem;
    border: 1px solid #cccccc63;
    border-radius: 10px;
  }

  .input-group>button {
    z-index: 0 !important;
  }

  #add-to-cart {
    height: 2.205rem;
  }
</style>
