<style>
  .alert-box {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgb(33, 37, 14);
    padding: .3125rem .75rem .3125rem .75rem;
    text-align: center;
    border-radius: 6px;
  }

  .red {
    color: rgb(255, 0, 0);
  }

  .green {
    color: rgb(0, 255, 0);
  }
</style>

<!-- alert box -->
<% if (alertMessage.length > 0) { %>
  <div class="alert-box <%= alertMessage[0].color %>">
    <%= alertMessage[0].content %>
  </div>
<% } %>

<!-- script for making alert box disappear -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const duration = 5000;

    setTimeout(() => {
      document.querySelector('.alert-box').style.display = 'none';
    }, duration);     
  });
</script>